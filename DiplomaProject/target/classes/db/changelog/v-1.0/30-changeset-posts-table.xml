<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="4" author="MinenkoVS">
        <sqlFile dbms="mysql"
                 encoding="UTF-8"
                 endDelimiter="\nGO"
                 relativeToChangelogFile="true"
                 splitStatements="true"
                 stripComments="true"
                 path="30-create-posts-table.sql"/>

        <createTable tableName="posts">
            <column name="id" type="int" autoIncrement="true" >
                <constraints nullable ="false" primaryKey = "true"/>
            </column>
            <column name="is_active" type="tinyint">
                <constraints nullable="false"/>
            </column>
            <column name="moderation_status" type="ENUM('NEW', 'ACCEPTED', 'DECLINED')">
                <constraints nullable="false"/>
            </column>
            <column name="parent_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="moderator_id" type="int">
            </column>
            <column name="user_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="time" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="text" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="view_count" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <sqlFile dbms="mysql"
                     encoding="UTF-8"
                     endDelimiter="\nGO"
                     relativeToChangelogFile="true"
                     splitStatements="true"
                     stripComments="true"
                     path="30-drop-posts-table.sql"/>
        </rollback>
    </changeSet>
</databaseChangeLog>