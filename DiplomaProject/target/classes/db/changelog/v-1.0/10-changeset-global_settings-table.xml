                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <sqlFile dbms="mysql"
                     encoding="UTF-8"
                     endDelimiter="\nGO"
                     relativeToChangelogFile="true"
                     splitStatements="true"
                     stripComments="true"
