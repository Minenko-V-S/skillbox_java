<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="" author="MinenkoVS">
        <sqlFile dbms="mysql"
                 encoding="UTF-8"
                 endDelimiter="\nGO"
                 relativeToChangelogFile="true"
                 splitStatements="true"
                 stripComments="true"
                path="01-create-captcha_codes-table.sql"/>

        <createTable tableName="captcha_codes">
            <column name="id" type="int" autoIncrement="true" >
                <constraints nullable ="false" primaryKey = "true"/>
            </column>
            <column name="time" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="TINYTEXT">
                <constraints nullable="false"/>
            </column>
            <column name="secret_code" type="TINYTEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
        <sqlFile dbms="mysql"
                 encoding="UTF-8"
                 endDelimiter="\nGO"
                 relativeToChangelogFile="true"
                 splitStatements="true"
                 stripComments="true"
                 path="01-drop-captcha_codes-table.sql"/>
        </rollback>
    </changeSet>
</databaseChangeLog>